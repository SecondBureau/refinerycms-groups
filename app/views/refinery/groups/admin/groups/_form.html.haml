= form_for [refinery, :groups_admin, @group] do |f|
  
  = render '/refinery/admin/error_messages', :object => @group, :include_object_name => true

  .field
    = f.label :name 
    = f.text_field :name
    
  .field
    = f.label :description
    = f.text_area :description, :rows => 10, :cols => 60
  
  .field
    = f.label :expires_on
    = f.date_select(:expires_on, :start_year => DateTime.now.year) 
  
  = render '/refinery/admin/form_actions', :f => f, 
      :continue_editing => false,
      :delete_title => t('delete', :scope => 'refinery.groups.admin.groups.group'),
      :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @group.name)
